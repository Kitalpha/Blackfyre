<Window x:Class="Blackfyre.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blackfyre"
        mc:Ignorable="d"
        Title="MainWindow" Height="637.38" Width="1145.607">
    <Grid>
        <Rectangle x:Name="TopBar" Fill="#FF444BE4" HorizontalAlignment="Left" Height="39" Stroke="Black" VerticalAlignment="Top" Width="1138" StrokeThickness="0"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Height="34" TextWrapping="Wrap" Text="Blackfyre" VerticalAlignment="Top" Width="187" FontSize="24" FontWeight="Bold" Foreground="White" FontFamily="Calibri" Margin="4,5,0,0"/>
        <ListView Margin="28,106,865,83" Name="lvPlayers">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Number" Width="70" DisplayMemberBinding="{Binding Number}" />
                    <GridViewColumn Header="Name" Width="160">
                        <GridViewColumn.CellTemplate >
                            <DataTemplate>
                                <TextBox x:Name="txtName" Width="140"  Text="{Binding Path=Name, UpdateSourceTrigger=PropertyChanged}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <ListView Margin="297,106,363,83" Name="lvRoles">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Role" Width="150" DisplayMemberBinding="{Binding Role}" />
                    <GridViewColumn Header="Number" Width="70">
                        <GridViewColumn.CellTemplate >
                            <DataTemplate>
                                <TextBox x:Name="txtRoleNumber" Width="60" Text="{Binding Path=RoleNumber, UpdateSourceTrigger=PropertyChanged}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Name" Width="150" DisplayMemberBinding="{Binding RoleName}" />
                    <GridViewColumn Header="Role" Width="100">
                        <GridViewColumn.CellTemplate >
                            <DataTemplate>
                                <ComboBox x:Name="txtRoleOption" Width="90" Text="{Binding Path=RoleOption, UpdateSourceTrigger=PropertyChanged}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        
        <TextBox x:Name="notePad" HorizontalAlignment="Left" Height="417" Margin="797,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="321"/>
    </Grid>
</Window>
